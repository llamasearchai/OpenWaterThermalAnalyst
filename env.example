# OpenWaterThermalAnalyst Environment Configuration

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Alert System Configuration
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# SCADA Integration
SCADA_ENDPOINT=https://your-scada-system.com/api/setpoint

# Datasette Configuration
DATASETTE_PORT=8001

# Jupyter Notebook Configuration
JUPYTER_TOKEN=openwater
JUPYTER_PORT=8888

# Application Configuration
LOG_LEVEL=INFO
DATA_DIR=/app/data
OUTPUT_DIR=/app/output
CONFIG_FILE=/app/config/example.yaml

# Thermal Analysis Parameters
DEFAULT_EMISSIVITY=0.99
DEFAULT_WAVELENGTH_UM=10.9
DEFAULT_WARNING_THRESHOLD_C=28.0
DEFAULT_CRITICAL_THRESHOLD_C=32.0

# Hydrodynamic Simulation Parameters
DEFAULT_THERMAL_DIFFUSIVITY=0.0001
DEFAULT_GRID_SPACING_M=10.0
DEFAULT_TIME_STEP_S=1.0
DEFAULT_SIMULATION_STEPS=100

# ML Configuration
DEFAULT_TEST_SIZE=0.2
DEFAULT_RANDOM_STATE=42
ML_MODEL_PATH=/app/output/trained_model.joblib
